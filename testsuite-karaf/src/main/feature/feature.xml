<features xmlns="http://karaf.apache.org/xmlns/features/v1.6.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.6.0" name="netty">
  <!-- Artifacts requiring Java 8 and nothing else -->
  <feature name="netty5-java8" version="${project.version}">
    <bundle>mvn:io.netty/netty5-buffer/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-base/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-classes-quic/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-compression/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-dns/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-haproxy/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-http/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-http2/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-http3/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-memcache/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-mqtt/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-redis/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-smtp/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-socks/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-stomp/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-common/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-handler/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-handler-proxy/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-resolver/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-resolver-dns/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-resolver-dns-classes-macos/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-transport/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-transport-classes-epoll/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-transport-classes-kqueue/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-transport-native-unix-common/${project.version}</bundle>
    <bundle>mvn:io.netty/netty5-transport-sctp/${project.version}</bundle>
  </feature>

  <!-- Artifacts requiring Java 9+ and nothing else -->
  <feature name="netty5-java9" version="${project.version}">
    <feature>netty5-java8</feature>
    <bundle>mvn:io.netty/netty5-transport-classes-io_uring/${project.version}</bundle>
  </feature>

  <!-- Artifacts requiring FasterXML AAlto -->
  <feature name="netty5-aalto" version="${project.version}">
    <feature>netty5-java8</feature>
    <bundle dependency="true">mvn:org.codehaus.woodstox/stax2-api/4.2.2</bundle>
    <bundle dependency="true">mvn:com.fasterxml/aalto-xml/${aalto.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-xml/${project.version}</bundle>
  </feature>

  <!-- Artifacts requiring Bouncy Castle -->
  <feature name="netty5-bc" version="${project.version}">
    <feature>netty5-java8</feature>
    <bundle dependency="true">mvn:org.bouncycastle/bcpkix-jdk18on/${bouncycastle.version}</bundle>
    <bundle dependency="true">mvn:org.bouncycastle/bcprov-jdk18on/${bouncycastle.version}</bundle>
    <bundle dependency="true">mvn:org.bouncycastle/bcutil-jdk18on/${bouncycastle.version}</bundle>
    <bundle>mvn:io.netty/netty5-handler-ssl-ocsp/${project.version}</bundle>
  </feature>

  <!-- Artifacts requiring JBoss Marshalling -->
  <feature name="netty5-jboss" version="${project.version}">
    <feature>netty5-java8</feature>
    <!-- Note: requires Java 11 as of https://issues.redhat.com/browse/JBMAR-253 -->
    <bundle dependency="true">wrap:mvn:org.jboss.marshalling/jboss-marshalling/${jboss.marshalling.version}</bundle>
    <bundle>mvn:io.netty/netty5-codec-marshalling/${project.version}</bundle>
  </feature>

  <!-- Artifacts requiring RXTX -->
  <feature name="netty5-rxtx" version="${project.version}">
    <feature>netty5-java8</feature>
    <bundle dependency="true">wrap:mvn:org.rxtx/rxtx/${rxtx.version}</bundle>
    <bundle>mvn:io.netty/netty5-transport-rxtx/${project.version}</bundle>
  </feature>
</features>
